@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let checkBoxFunction = () => {
            var name = $("#name").val();
            var email = $("#email").val();
            var phone_number = $("#phone_number").val();
            var message = $("#message").val();
            var checkBox = $("#flexCheckDefault-1")[0].checked;
            if (name != "" && email != "" && phone_number != "" && message != "") {
                $("#errors").html("");
                if(checkBox){
                    $("#termRead").html("");
                }else{
                    $("#termRead").html("<b style='color:red;'>Please accept our Term</b>");
                }
            } else {
                $("#flexCheckDefault-1").prop("checked", false);
                $("#errors").html("<b style='color:red;'>Please fill all blank</b>");
                $("#termRead").html("");
            }
        }
        function checkEmail() {
            var email = $("#email").val();
            $.ajax({
                type: "GET",
                url: "/checkEmail",
                data: { email: email },
                success: function (respone) {
                    if (respone.success) {

                    } else {
                        $("#error-email").html("<b style='color:red;font-size:13px;'><i style='font-size: 14px;' class='bi bi-info-circle'></i>&nbsp;Email not exists.Try another email!</b>");
                    }
                }
            })
        }
    </script>
}


